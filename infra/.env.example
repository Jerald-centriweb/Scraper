# === Database (Supabase or Postgres) ===
PG_HOST=your-supabase-host.supabase.co
PG_PORT=5432
PG_DB=postgres
PG_USER=postgres
PG_PASSWORD=your-strong-password
# For Supabase, keep true (sslmode=require)
PG_SSL=true
PG_POOL_MAX=10

# === Redis (secured) ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_to_strong_random

# === Proxies (Recommended for production) ===
# Format: http://username:password@host:port
PROXY_AU_RESIDENTIAL=
PROXY_NZ_RESIDENTIAL=

# === Crawler Settings ===
MAX_CONCURRENT_JOBS=2
MAX_REQUESTS_PER_BROWSER=50
MAX_SESSION_MINUTES=10
HEADLESS=true

# === Bandwidth Budget (optional, used by monitor) ===
DAILY_GB_BUDGET=2
MONTHLY_GB_BUDGET=30

# === API Security (CORS + Rate Limiting) ===
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100
# Comma-separated list of allowed origins, e.g. https://n8n.yourdomain.com,https://admin.yourdomain.com
CORS_ORIGINS=*

# === Minimal auth for /jobs (RECOMMENDED) ===
# Set and pass header: x-job-token: <value>
JOB_TOKEN=change_this_for_production

# === Admin protection for /queue/status (optional) ===
# Set and pass header: x-admin-token: <value>
API_ADMIN_TOKEN=

# === Trust proxy if behind LB/reverse proxy (Hostinger often true) ===
TRUST_PROXY=false

# === Monitoring ===
SLACK_WEBHOOK_URL=

# === Server ===
NODE_ENV=production
# Host port mapping for API container
HOST_API_PORT=3000
# Container listens on 3000 (do not change)
PORT=
LOG_LEVEL=info

# === Public API URL (used by n8n) ===
PUBLIC_API_URL=